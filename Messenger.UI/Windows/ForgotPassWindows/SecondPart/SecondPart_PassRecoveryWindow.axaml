<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Messenger.UI.SecondPart_PassRecoveryWindow"
        Title="SecondPart_PassRecoveryWindow"
        Background="Gray">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Width="200" HorizontalAlignment="Center" Margin="0,10"
            x:Name="MailCodeTextBox" Watermark="Код доступа"/>
        <Button Content="Далее" Width="200"
            HorizontalContentAlignment="Center" 
            HorizontalAlignment="Center" Margin="0,10" 
            Click="GoFurther_Click"/>
    </StackPanel>
</Window>
