<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaUI.RegistrationWindow"
        Title="Регистрация"
        Background="Gray">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Assets/Logo.png" Width="50" Height="50" Margin="0,0,10,0"/>
            <Label VerticalAlignment="Center">TeleTonna</Label>
        </StackPanel>
        <TextBox Width="200" HorizontalAlignment="Center" Margin="0,10"/>
        <TextBox Width="200" HorizontalAlignment="Center" Margin="0,10"/>
        <Button Content="Вход" Width="100" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10"/>
        <Button Background="Gray" HorizontalAlignment="Center" FontSize="12" Foreground="Black" Cursor="Hand"> 
            Хотите зарегистрироваться?
        </Button>
    </StackPanel>
</Window>
